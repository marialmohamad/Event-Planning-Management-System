@model Booking
@{
}

<div class="row">
    <div class="col-mid-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Booking/Reservation</h2>


        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>

                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>


            <div class="-row mb-3">
                <label class="col-sm-4 col-form-label">NoAttending</label>
                <div class="col-sm-8">
                <input class="form-control" asp-for="NoAttending">
                <span asp-validation-for="NoAttending" class="text-danger"></span>
            </div>
    </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Timespan</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Timespan">
                    <span asp-validation-for="Timespan" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">GSM</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="GSM">
                    <span asp-validation-for="GSM" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Gmail</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Gmail">
                    <span asp-validation-for="Gmail" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Address</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                   
                    <a class="btn btn-outline-primary" asp-controller="Events" asp-action="Reservations" role="buttom">
                        Book
                    </a>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Events" asp-action="Index" role="buttom">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

